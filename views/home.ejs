    <div class="parllex-scroll">
        <h1 style="font-family:'Times New Roman', Times, serif"><b>Begin The Day With <br> Great Taste. </b></h1>
        <a href="/menu" class="btn btn-success" id="OderOnline">Order now.</a>
    </div>
    <div class="container">
      <h1 class="text-center" style="margin-left: 1%; font-family:'Courier New', Courier, monospace;">Reservation Table</h1>
        <hr class="Reservation"><br>
        <form action="">
            <div class="col-sm-4">
                <label for="Name">Name: </label>
                    <input type="text" class="form-control" placeholder="Name *" name="name" id="" required>
            </div>

            <div class="col-sm-4">
                <label for="Email">Email: </label>
                    <input type="email" class="form-control" placeholder="Email *" name="email" id="" required>
            </div>

            <div class="col-sm-4">
                <label for="Name">Mobile no: </label>
                    <input type="text" class="form-control" placeholder="Mobile no *" name="mobile" id="" required>
            </div>

            <div class="col-sm-4">
                <label for="Date">Reservation Date: </label>
                    <input type="date" class="form-control" name="date" id="" required>
            </div>
            
            <div class="col-sm-4">
                <label for="Guest">No. of Guests: </label><br>
                   <select name="" id="" class="form-control" required>
                       <option value="Select">Select *</option>
                       <option value="1">1 *</option>
                       <option value="2">2 *</option>
                       <option value="3">3 *</option>
                       <option value="4">4 *</option>
                       <option value="5">5 *</option>
                       <option value="More than 5">More than 5 *</option>
                   </select>
            </div>
            <button type="submit" class="btn btn-success" id="ReserveButton">Reserve</button>
        </form>
    </div>
